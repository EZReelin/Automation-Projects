{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "biomechanics_analysis_schema",
  "title": "Biomechanical Throw Analysis Schema",
  "description": "Schema for MediaPipe-based biomechanical analysis of dart throws",
  "type": "object",
  "required": ["analysis_id", "timestamp", "data_source", "session_reference", "throws"],
  "properties": {
    "analysis_id": {
      "type": "string",
      "description": "Unique identifier for this analysis session",
      "pattern": "^bio_[0-9]{8}_[0-9]{6}$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of analysis start"
    },
    "data_source": {
      "type": "string",
      "const": "biomechanics",
      "description": "Identifies data as biomechanical analysis"
    },
    "session_reference": {
      "type": "string",
      "description": "Reference to associated Scolia practice session if applicable"
    },
    "camera_settings": {
      "type": "object",
      "properties": {
        "device": {"type": "string"},
        "resolution": {"type": "string"},
        "framerate": {"type": "integer"},
        "position": {
          "type": "string",
          "enum": ["front", "side", "angle_45"]
        }
      }
    },
    "analysis_duration_seconds": {
      "type": "number"
    },
    "total_throws_analyzed": {
      "type": "integer"
    },
    "throws": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["throw_number", "timestamp", "phases"],
        "properties": {
          "throw_number": {"type": "integer"},
          "timestamp": {"type": "string", "format": "date-time"},
          "throw_quality_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Overall quality score based on form consistency"
          },
          "phases": {
            "type": "object",
            "properties": {
              "setup": {
                "type": "object",
                "properties": {
                  "detected": {"type": "boolean"},
                  "duration_ms": {"type": "number"},
                  "stance_width_cm": {"type": "number"},
                  "weight_distribution": {
                    "type": "string",
                    "enum": ["front_heavy", "balanced", "back_heavy"]
                  },
                  "body_alignment_degrees": {"type": "number"},
                  "shoulder_position": {
                    "type": "object",
                    "properties": {
                      "x": {"type": "number"},
                      "y": {"type": "number"},
                      "z": {"type": "number"}
                    }
                  }
                }
              },
              "backswing": {
                "type": "object",
                "properties": {
                  "detected": {"type": "boolean"},
                  "duration_ms": {"type": "number"},
                  "elbow_angle_start": {"type": "number"},
                  "elbow_angle_end": {"type": "number"},
                  "shoulder_movement": {"type": "number"},
                  "wrist_cock_angle": {"type": "number"}
                }
              },
              "acceleration": {
                "type": "object",
                "properties": {
                  "detected": {"type": "boolean"},
                  "duration_ms": {"type": "number"},
                  "elbow_extension_rate": {"type": "number"},
                  "forearm_velocity": {"type": "number"},
                  "wrist_snap_detected": {"type": "boolean"}
                }
              },
              "release": {
                "type": "object",
                "properties": {
                  "detected": {"type": "boolean"},
                  "timestamp_ms": {"type": "number"},
                  "release_point": {
                    "type": "object",
                    "properties": {
                      "x": {"type": "number"},
                      "y": {"type": "number"},
                      "z": {"type": "number"}
                    }
                  },
                  "elbow_angle": {"type": "number"},
                  "shoulder_angle": {"type": "number"},
                  "wrist_angle": {"type": "number"},
                  "release_height_cm": {"type": "number"}
                }
              },
              "follow_through": {
                "type": "object",
                "properties": {
                  "detected": {"type": "boolean"},
                  "duration_ms": {"type": "number"},
                  "arm_extension": {"type": "number"},
                  "hand_finish_position": {
                    "type": "object",
                    "properties": {
                      "x": {"type": "number"},
                      "y": {"type": "number"},
                      "z": {"type": "number"}
                    }
                  },
                  "pointing_at_target": {"type": "boolean"}
                }
              }
            }
          },
          "keypoints": {
            "type": "object",
            "description": "Key body landmarks at release moment",
            "properties": {
              "nose": {"$ref": "#/definitions/landmark"},
              "right_shoulder": {"$ref": "#/definitions/landmark"},
              "right_elbow": {"$ref": "#/definitions/landmark"},
              "right_wrist": {"$ref": "#/definitions/landmark"},
              "left_shoulder": {"$ref": "#/definitions/landmark"},
              "left_elbow": {"$ref": "#/definitions/landmark"},
              "left_wrist": {"$ref": "#/definitions/landmark"},
              "right_hip": {"$ref": "#/definitions/landmark"},
              "left_hip": {"$ref": "#/definitions/landmark"}
            }
          },
          "deviations": {
            "type": "array",
            "description": "Detected form deviations from ideal",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "elbow_drop",
                    "shoulder_rotation",
                    "early_release",
                    "late_release",
                    "wrist_flip",
                    "body_sway",
                    "incomplete_follow_through",
                    "head_movement",
                    "stance_shift"
                  ]
                },
                "severity": {
                  "type": "string",
                  "enum": ["minor", "moderate", "significant"]
                },
                "description": {"type": "string"}
              }
            }
          }
        }
      }
    },
    "aggregate_analysis": {
      "type": "object",
      "description": "Summary statistics across all throws",
      "properties": {
        "consistency_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "average_release_point": {
          "type": "object",
          "properties": {
            "x": {"type": "number"},
            "y": {"type": "number"},
            "z": {"type": "number"}
          }
        },
        "release_point_variance": {"type": "number"},
        "average_elbow_angle_at_release": {"type": "number"},
        "elbow_angle_variance": {"type": "number"},
        "most_common_deviations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {"type": "string"},
              "frequency": {"type": "integer"},
              "percentage": {"type": "number"}
            }
          }
        },
        "improvement_areas": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    }
  },
  "definitions": {
    "landmark": {
      "type": "object",
      "properties": {
        "x": {"type": "number"},
        "y": {"type": "number"},
        "z": {"type": "number"},
        "visibility": {"type": "number"}
      }
    }
  }
}
