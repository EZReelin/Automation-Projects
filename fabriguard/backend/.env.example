# FabriGuard Backend Environment Variables

# Application
APP_NAME=FabriGuard
VERSION=0.1.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/fabriguard
DATABASE_ECHO=false

# InfluxDB (Time Series)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=fabriguard-dev-token
INFLUXDB_ORG=fabriguard
INFLUXDB_BUCKET=sensor_data

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS (Optional - for S3 storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-2
# S3_BUCKET_RAW_DATA=fabriguard-raw-sensor-data

# Firebase (Optional - for push notifications)
# FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Twilio (Optional - for SMS notifications)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# Email (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# EMAIL_FROM=alerts@fabriguard.io

# ML Configuration
ML_MODEL_PATH=./ml/models
ANOMALY_THRESHOLD=0.7
RUL_CONFIDENCE_THRESHOLD=0.8
