# Manufacturing Consulting System - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Application Settings
# ===========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=console

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=manufacturing_consulting
DB_USER=postgres
DB_PASSWORD=your_secure_password

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# Authentication & Security
# ===========================================
AUTH_SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# AI Provider Configuration
# ===========================================
AI_ANTHROPIC_API_KEY=your_anthropic_api_key
AI_OPENAI_API_KEY=your_openai_api_key
AI_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# ===========================================
# Storage Configuration
# ===========================================
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./data/uploads
# For S3 storage:
# STORAGE_BACKEND=s3
# STORAGE_S3_BUCKET=your-bucket-name
# STORAGE_S3_REGION=us-east-1

# ===========================================
# Quote Intelligence Settings
# ===========================================
QUOTE_SIMILARITY_THRESHOLD=0.75
QUOTE_MAX_SIMILAR_PARTS=10
QUOTE_VALIDITY_DAYS=30

# ===========================================
# Knowledge Preservation Settings
# ===========================================
KP_MIN_INTERVIEW_LENGTH_MINUTES=15
KP_ENABLE_AUTO_CATEGORIZATION=true

# ===========================================
# ERP Copilot Settings
# ===========================================
ERP_QUERY_CACHE_TTL_SECONDS=3600
ERP_MAX_CONTEXT_CHUNKS=5

# ===========================================
# Monitoring & Observability
# ===========================================
SENTRY_DSN=
ENABLE_METRICS=true
METRICS_PORT=9090
